<div>
  <h3>Create a new user:</h3>
  {{paper-input
    disabled=isDisabled
    label="First Name"
    value=firstName
    onChange=(action (mut firstName))
    required=true
    errorMessages=(hash
      required="First Name is required."
    )
  }}
  {{paper-input
    disabled=isDisabled
    label="Last Name"
    value=lastName
    onChange=(action (mut lastName))
    required=true
    errorMessages=(hash
      required="Last Name is required."
    )
  }}
  {{#paper-button raised=true onClick=(action "createUser") iconButton=true}}
    {{paper-icon "add"}}
  {{/paper-button}}
</div>

<div>
  <h3>Your users:</h3>
  <div class="user-grid">
    {{#each model as |user|}}
      {{user-grid-row user=user isDirty=isDirty}}
    {{/each}}
  </div>
</div>
