<div class="ob-page__title-area">
  <div>
    <h2>Order Details</h2>
  </div>
  <div>
    {{#if isDisabled}}
      {{#paper-button
        class="ob-order-details__edit"
        onClick=(action "toggleEdit")
        primary=true
        raised=true
      }}Edit{{/paper-button}}
    {{else}}
      {{#paper-button
        class="ob-order-details__edit"
        onClick=(action "cancelEdit")
        accent=true
        raised=true
      }}Cancel{{/paper-button}}
    {{/if}}
  </div>
</div>

<div class="ob-order-details__user-info">
  <h3>Order Owner: {{#link-to "user" user.id}}{{user.firstName}} {{user.lastName}}{{/link-to}}</h3>
</div>

<h3>Order Info:</h3>
<div class="ob-order-details__order-info">
  <div>
    <p><strong>Order ID:</strong> <span>{{order.orderId}}</span></p>
    <p><strong>Tracking Number:</strong> <span>{{order.trackingId}}</span></p>
  </div>
  {{paper-divider}}<br />
  <div>
    {{paper-input
      disabled=isDisabled
      label="Name"
      value=locationName
      onChange=(action (mut locationName))
    }}
    {{paper-input
      disabled=isDisabled
      label="Street Address"
      value=street
      onChange=(action (mut street))
    }}
  </div>
  <div>
    {{paper-input
      disabled=isDisabled
      label="City"
      value=city
      onChange=(action (mut city))
    }}
    {{paper-input
      disabled=isDisabled
      label="State"
      value=state
      onChange=(action (mut state))
    }}
    {{paper-input
      disabled=isDisabled
      label="Zip"
      value=zipCode
      onChange=(action (mut zipCode))
    }}
  </div>
  {{#paper-button
    onClick=(action "updateOrder" order.orderId)
    primary=true
    raised=true
    disabled=isDisabled
  }}
    Save
  {{/paper-button}}

  {{#paper-button
    onClick=(action "cancelEdit")
    accent=true
    raised=true
    disabled=isDisabled
  }}
    Cancel
  {{/paper-button}}

  {{#paper-button
    warn=true
    raised=true
    onClick=(action "deleteOrder" order.orderId)
    disabled=isDisabled
  }}
    Delete Order
  {{/paper-button}}
</div>
