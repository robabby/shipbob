{{#if user.id}}
  {{paper-input
    disabled=isDisabled
    label="First Name"
    value=firstName
    onChange=(action (mut firstName))}}
  {{paper-input
    disabled=isDisabled
    label="Last Name"
    value=lastName
    onChange=(action (mut lastName))}}

  {{#if isDisabled}}

    {{#paper-button onClick=(action "toggleEdit") iconButton=true}}
      {{paper-icon "edit"}}
    {{/paper-button}}

  {{else}}

    {{#paper-button
      onClick=(action "updateUser" user.id)
      iconButton=true
    }}
      {{paper-icon "check"}}
    {{/paper-button}}

    {{#paper-button
      iconButton=true
      onClick=(action "toggleEdit")
    }}
      {{paper-icon "clear"}}
    {{/paper-button}}

  {{/if}}

  {{#paper-button
    iconButton=true
    href=(href-to "user" user.id)
  }}
    {{paper-icon "assignment"}}
  {{/paper-button}}

  {{#paper-button
    iconButton=true
    onClick=(action "deleteUser" user.id)
  }}
    {{paper-icon "delete"}}
  {{/paper-button}}
{{else}}
  {{paper-progress-circular class="md-hue-2" diameter=25}}
{{/if}}
